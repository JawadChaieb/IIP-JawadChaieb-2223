<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="178*"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtBxInvoeg" HorizontalAlignment="Center" Margin="0,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="428" Height="56" TextAlignment="Right" BorderBrush="#FF47484B" Background="#FFD7D7D7" FontSize="36"/>
        <Label x:Name="lblUitkomst"  HorizontalAlignment="Center" Height="37" Margin="0,88,0,0"  VerticalAlignment="Top" Width="428"  FontSize="24" Foreground="#FF898989" FontWeight="Normal" FontFamily="MS UI Gothic" Content="0.0" HorizontalContentAlignment="Right"/>
        <Button x:Name="btnEen" Content="1" HorizontalAlignment="Left" Margin="36,166,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Click="btnEen_Click" />
        <Button x:Name="btnVier" Content="4" HorizontalAlignment="Left" Margin="36,264,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Click="btnVier_Click"/>
        <Button x:Name="btnZeven" Content="7" HorizontalAlignment="Left" Margin="36,2,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Grid.Row="1" Click="btnZeven_Click"/>
        <Button x:Name="btnKomma" Content="." HorizontalAlignment="Left" Margin="36,100,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" Grid.Row="1" FontSize="24" Click="btnKomma_Click"/>
        <Button x:Name="btnTwee" Content="2" HorizontalAlignment="Left" Margin="130,166,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Click="btnTwee_Click"/>
        <Button x:Name="btnDrie" Content="3" HorizontalAlignment="Center" Margin="0,166,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Click="btnDrie_Click"/>
        <Button x:Name="btnOptellen" Content="+" HorizontalAlignment="Left" Margin="321,166,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Click="btnOptellen_Click" />
        <Button x:Name="btnVierkantswortel" Content="SQR" HorizontalAlignment="Left" Margin="412,161,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="20" Click="btnVierkantswortel_Click"/>
        <Button x:Name="btnVijf" Content="5" HorizontalAlignment="Left" Margin="130,264,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Click="btnVijf_Click"/>
        <Button x:Name="btnZes" Content="6" HorizontalAlignment="Center" Margin="0,264,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Click="btnZes_Click"/>
        <Button x:Name="btnAftrekken" Content="-" HorizontalAlignment="Left" Margin="321,264,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Click="btnAftrekken_Click"/>
        <Button x:Name="btnKwadraat" Content="SQRT" HorizontalAlignment="Left" Margin="412,264,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="20" Click="btnKwadraat_Click"/>
        <Button x:Name="btnAcht" Content="8" HorizontalAlignment="Left" Margin="130,2,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" FontSize="24" Grid.Row="1" Click="btnAcht_Click"/>
        <Button x:Name="btnNegen" Content="9" HorizontalAlignment="Center" Margin="0,2,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" Grid.Row="1" FontSize="24" Click="btnNegen_Click"/>
        <Button x:Name="btnVermenigvuldigen" Content="*" HorizontalAlignment="Left" Margin="321,2,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" Grid.Row="1" FontSize="24" Click="btnVermenigvuldigen_Click"/>
        <Button x:Name="btnSin" Content="SIN" HorizontalAlignment="Left" Margin="412,2,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" Grid.Row="1" FontSize="20" Click="btnSin_Click"/>
        <Button x:Name="btnNul" Content="0" HorizontalAlignment="Left" Margin="130,100,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" Grid.Row="1" FontSize="24" Click="btnNul_Click"/>
        <Button x:Name="btnWissen" Content="CE" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" Grid.Row="1" FontSize="24" Click="btnWissen_Click"/>
        <Button x:Name="btnDelen" Content="/" HorizontalAlignment="Left" Margin="321,100,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" Grid.Row="1" FontSize="24" Click="btnDelen_Click"/>
        <Button x:Name="btnRandom" Content="RND" HorizontalAlignment="Left" Margin="412,100,0,0" VerticalAlignment="Top" Height="53" RenderTransformOrigin="-0.207,0.319" Width="52" Grid.Row="1" FontSize="20" Click="btnRandom_Click"/>
    </Grid>
</Window>
